    <script src="~/CmsContent/Scripts/LayoutDesign.js"></script>
    <script src="~/Content/js/jquery-ui/jquery-ui.min.js"></script>
    <script src="~/Content/themes/Admin/script/admin.js"></script>
    <script src="~/CmsContent/EasyPlug/Easy.Grid.js"></script>
