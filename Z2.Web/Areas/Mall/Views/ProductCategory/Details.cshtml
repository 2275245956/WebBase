

@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_Form.cshtml";
}
<script>
    @*获取index中详情方法的参数*@
    @*keyValue 就是当前行的id*@
    var keyValue = $.request("keyValue");
    $(function () {
        //initControl();
        $.ajax({
            url:"/Mall/ProductCategory/GetDetalisJson",
            type:"Post",
            data:{keyValue:keyValue},
            dataType:"json",
            async:false,
            success: function (data) {
                if (data.LastUpdateTime == "0001-01-01 00:00:00") {
                    data.LastUpdateTime = "";
                }
                $("#form1").formSerialize(data);
                $("#form1").find('.form-control,select,input').attr('readonly', 'readonly');
                $("#form1").find('div.ckbox label').attr('for', '');
            }
        });
    })
    //function initControl() {
    //    $("#OrganizeId").bindSelect({
    //        url: "/Mall/ProductCategory/GetTreeSelectJson",
    //    });
    //}
</script>
<form id="form1">
    <div style="margin-top:10px;margin-left:10px;margin-right:10px;">
        <ul class="nav nav-tabs">
            <li class="active"><a href="#">产品信息</a></li>
        </ul>
        <div style="padding-top:10px;margin-right:30px;">
            <table class="form">
                <tr>
                    <th class="formTitle">产品图片</th>
                    <td>
                        <div class="imgdiv">
                            <img id="Path" src="@Url.Action("GetProductImg","ProductCategory",new { keyValue = HttpContext.Current.Request["keyValue"]})" width="100px" height="100px">
                        </div>
                    </td>
                </tr>
                <tr>
                    <th class="formTitle">产品名称</th>
                    <td class="formValue">
                        <input id="ItemName" name="ItemName" type="text" class="form-control required" />
                    </td>
                </tr>
                <tr>
                    <th class="formTitle">产品编号</th>
                    <td class="formValue">
                        <input id="ItemCode" name="ItemCode" type="text" class="form-control required" />
                    </td>
                </tr>
                <tr>
                    <th class="formTitle">产品简称</th>
                    <td class="formValue">
                        <input id="SimpleSpelling" name="SimpleSpelling" type="text" class="form-control required" />
                    </td>
                </tr>
                <tr>
                    <th class="formTitle">产品价格范围</th>
                    <td class="formValue">
                        <input id="PriceRange" name="PriceRange" type="text" class="form-control required" />
                    </td>
                </tr>
                <tr>
                    <th class="formTitle">产品副标题</th>
                    <td class="formValue">
                        <input id="SubTitle" name="SubTitle" type="text" class="form-control required" />
                    </td>
                </tr>
                <tr>
                    <th class="formTitle">产品显示顺序</th>
                    <td class="formValue">
                        <input id="DisplayNo" name="DisplayNo" type="text" class="form-control required" />
                    </td>
                </tr>
                <tr>
                    <th class="formTitle" style="height: 35px;">选项</th>
                    <td class="formValue" style="padding-top: 1px;">
                        <div class="ckbox">
                            <input id="EnabledFlag" name="EnabledFlag" type="checkbox" checked="checked"><label for="F_EnabledMark">有效</label>
                        </div>
                    </td>
                </tr>
                <tr>
                    <th class="formTitle">产品图片</th>
                    <td class="formValue">
                        <input type="text" id="CategoryImg" name="CategoryImg" class="form-control fileWidth" />
                    </td>
                </tr>
                <tr>
                    <th class="formTitle" valign="top" style="padding-top: 5px;">
                        产品附加标签
                    </th>
                    <td class="formValue">
                        <textarea id="TagText" name="TagText" class="form-control" style="height: 40px;width:97%"></textarea>
                    </td>
                </tr>
                <tr>
                    <th class="formTitle" valign="top" style="padding-top: 5px;">
                        备注
                    </th>
                    <td class="formValue">
                        <textarea id="Description" name="Description" class="form-control" style="height: 60px;width:97%"></textarea>
                    </td>
                </tr>
                <tr>
                    <th class="formTitle">创建人员</th>
                    <td class="formValue">
                        <input id="CreaterUserId" name="CreaterUserId" type="text" class="form-control" />
                    </td>
                </tr>
                <tr>
                    <th class="formTitle">创建时间</th>
                    <td class="formValue">
                        <input id="CreaterTime" name="CreaterTime" type="text" class="form-control" />
                    </td>
                </tr>
                <tr>
                    <th class="formTitle">修改人员</th>
                    <td class="formValue">
                        <input id="LastUpdateUserId" name="LastUpdateUserId" type="text" class="form-control" />
                    </td>

                </tr>
                <tr>
                    <th class="formTitle">修改时间</th>
                    <td class="formValue">
                        <input id="LastUpdateTime" name="LastUpdateTime" type="text" class="form-control" />
                    </td>
                </tr>
            </table>
        </div>
    </div>

</form>