@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Form.cshtml";
}
<script>
    var keyValue = $.request("keyValue");
    $(function () {
        initControl();
        $.ajax({
            url: '@Url.Action("GetFormJson")',//"/SystemManage/Module/GetFormJson",
            data: { keyValue: keyValue },
            dataType: "json",
            type:'post',
            async: false,
            success: function (data) {
                $("#form1").formSerialize(data);
                $("#form1").find('.form-control,select,input').attr('readonly', 'readonly');
                $("#form1").find('div.ckbox label').attr('for', '');
            }
        });
    });
    function initControl() {
        $("#Target").select2({
            minimumResultsForSearch: -1
        });
        $("#ParentId").bindSelect({
            type:'post',
            url: '@Url.Action("GetTreeSelectJson")',//"/SystemManage/Module/GetTreeSelectJson",
        });
    }
</script>
<form id="form1">
    <div style="margin-top: 10px; margin-left: 10px; margin-right: 10px;">
        <ul class="nav nav-tabs">
            <li role="presentation" class="active"><a href="#">@Resources.BaseRes.BaseInfo</a></li>
           
        </ul>
        <div style="padding-top: 20px; margin-right: 30px;">
            <table class="form">
                <tr>
                    <th class="formTitle">@Resources.BaseRes.Superior</th>
                    <td class="formValue">
                        <select id="ParentId" name="ParentId" class="form-control">
                            <option value="0">@Resources.BaseRes.ParentId</option>
                        </select>
                    </td>
                    <th class="formTitle">@Resources.BaseRes.Name</th>
                    <td class="formValue">
                        <input id="Name" name="Name" type="text" class="form-control" />
                    </td>
                </tr>
                <tr>
                    <th class="formTitle">@Resources.BaseRes.Mudule_UrlAddress</th>
                    <td class="formValue">
                        <input id="UrlAddress" name="UrlAddress" type="text" class="form-control" />
                    </td>
                    <th class="formTitle">@Resources.BaseRes.Mudule_Target</th>
                    <td class="formValue">
                        <select id="Target" name="Target" class="form-control">
                            <option value="">==@Resources.BaseRes.Select==</option>
                            <option value="expand">@Resources.BaseRes.Mudule_NoPage</option>
                            <option value="iframe">@Resources.BaseRes.Mudule_FramePage</option>
                            <option value="open">@Resources.BaseRes.Mudule_PopUpPage</option>
                            <option value="blank">@Resources.BaseRes.Mudule_NewWindow</option>
                        </select>
                    </td>
                </tr>
                <tr>
                    <th class="formTitle">@Resources.BaseRes.Module_Icon</th>
                    <td class="formValue">
                        <div class="input-group">
                            <input id="Icon" name="Icon" type="text" class="form-control">
                            <span class="input-group-btn">
                                <a class="btn  btn-primary"><i class="fa fa-ellipsis-h"></i></a>
                            </span>
                        </div>
                    </td>
                    <th class="formTitle">@Resources.BaseRes.Sort</th>
                    <td class="formValue">
                        <input id="SortCode" name="SortCode" type="text" class="form-control required" />
                    </td>
                </tr>
                <tr>
                    <th class="formTitle" style="height: 35px;">@Resources.BaseRes.Options</th>
                    <td class="formValue" colspan="3" style="padding-top: 1px;">
                        <div class="ckbox">
                            <input id="IsMenu" name="IsMenu" type="checkbox"><label for="IsMenu">@Resources.BaseRes.Module_Menu</label>
                        </div>
                        <div class="ckbox">
                            <input id="IsPublic" name="IsPublic" type="checkbox"><label for="IsPublic">@Resources.BaseRes.Module_Public </label>
                        </div>
                        <div class="ckbox">
                            <input id="IsExpand" name="IsExpand" type="checkbox"><label for="IsExpand">@Resources.BaseRes.Module_Expand</label>
                        </div>
                        <div class="ckbox">
                            <input id="EnabledFlag" name="EnabledFlag" type="checkbox" checked="checked"><label for="EnabledMark">@Resources.BaseRes.EnabledFlag</label>
                        </div>

                        <div class="ckbox">
                            <input id="AllowEdit" name="AllowEdit" type="checkbox"><label for="AllowEdit">@Resources.BaseRes.AllowEdit</label>
                        </div>
                        <div class="ckbox">
                            <input id="AllowDelete" name="AllowDelete" type="checkbox"><label for="AllowDelete">@Resources.BaseRes.AllowDelete</label>
                        </div>
                    </td>
                </tr>
                <tr>
                    <th class="formTitle" valign="top" style="padding-top: 5px;">
                        @Resources.BaseRes.Description
                    </th>
                    <td class="formValue" colspan="3">
                        <textarea id="Description" name="Description" class="form-control" style="height: 100px;"></textarea>
                    </td>
                </tr>
                <tr>
                    <th class="formTitle">@Resources.BaseRes.CreaterUserId</th>
                    <td class="formValue">
                        <input id="CreaterUserId" name="CreaterUserId" type="text" class="form-control" />
                    </td>
                    <th class="formTitle">@Resources.BaseRes.CreaterTime</th>
                    <td class="formValue">
                        <input id="CreaterTime" name="CreaterTime" type="text" class="form-control" />
                    </td>
                </tr>
                <tr>
                    <th class="formTitle">@Resources.BaseRes.LastUpdateUserId</th>
                    <td class="formValue">
                        <input id="LastUpdateUserId" name="LastUpdateUserId" type="text" class="form-control" />
                    </td>
                    <th class="formTitle">@Resources.BaseRes.LastUpdateTime</th>
                    <td class="formValue">
                        <input id="LastUpdateTime" name="LastUpdateTime" type="text" class="form-control" />
                    </td>
                </tr>
            </table>
        </div>
    </div>
</form>
